            Le message
            <textarea rows="4" cols="50" name="Texte" style="width:20vw;margin-top:1vw;"></textarea>
            <button type="submit">Envoyer</button>
          </form> -->
        </div>
      </div>
    </section> <!-- .section -->
    <%end%>
